{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "ReactSlickOptions": {
            "properties": {
                "accessibility": {
                    "default": true,
                    "description": "Enables tabbing and arrow key navigation",
                    "type": "boolean"
                },
                "adaptiveHeight": {
                    "default": false,
                    "description": "Enables adaptive height for single slide horizontal carousels",
                    "type": "boolean"
                },
                "arrows": {
                    "default": true,
                    "description": "Show left and right nav arrows",
                    "type": "boolean"
                },
                "autoplay": {
                    "default": false,
                    "description": "Enables Autoplay",
                    "type": "boolean"
                },
                "autoplaySpeed": {
                    "default": 3000,
                    "description": "Autoplay Speed in milliseconds",
                    "type": "number"
                },
                "centerMode": {
                    "default": false,
                    "description": "Enables centered view with partial prev/next slides",
                    "type": "boolean"
                },
                "className": {
                    "description": "Additional class name for the inner slider div",
                    "type": "string"
                },
                "dots": {
                    "default": false,
                    "description": "Show dot indicators",
                    "type": "boolean"
                },
                "dotsClass": {
                    "default": "'slick-dots'",
                    "description": "Class for slide indicator dots container",
                    "type": "string"
                },
                "draggable": {
                    "default": true,
                    "description": "Enable mouse dragging",
                    "type": "boolean"
                },
                "fade": {
                    "default": false,
                    "description": "Enable fade",
                    "type": "boolean"
                },
                "focusOnSelect": {
                    "default": false,
                    "description": "Go to slide on click",
                    "type": "boolean"
                },
                "infinite": {
                    "default": true,
                    "description": "Infinite loop sliding",
                    "type": "boolean"
                },
                "initialSlide": {
                    "default": 0,
                    "description": "Slide to start on",
                    "type": "number"
                },
                "lazyLoad": {
                    "default": false,
                    "description": "Loads images or renders components on demands",
                    "type": "boolean"
                },
                "pauseOnHover": {
                    "default": true,
                    "description": "Pause Autoplay On Hover",
                    "type": "boolean"
                },
                "responsive": {
                    "description": "Object containing breakpoints and settings objects.\nEnables settings sets at given screen width.\nBreakpoints in the array should be ordered from smalles to greatest.",
                    "items": {
                        "properties": {
                            "breakpoint": {
                                "description": "maxWidth so the settings will be applied when resolution is below this value",
                                "type": "number"
                            },
                            "settings": {
                                "anyOf": [
                                    {
                                        "$ref": "#/definitions/ReactSlickOptions"
                                    },
                                    {
                                        "enum": [
                                            "unslick"
                                        ],
                                        "type": "string"
                                    }
                                ],
                                "description": "Set settings to \"unslick\" instead of an object to disable slick at a given breakpoint."
                            }
                        },
                        "propertyOrder": [
                            "breakpoint",
                            "settings"
                        ],
                        "required": [
                            "breakpoint",
                            "settings"
                        ],
                        "type": "object"
                    },
                    "type": "array"
                },
                "rtl": {
                    "default": false,
                    "description": "Change the slider's direction to become right-to-left",
                    "type": "boolean"
                },
                "slidesToShow": {
                    "default": 1,
                    "description": "Number of slides to be visible at a time",
                    "type": "number"
                },
                "useCSS": {
                    "default": true,
                    "description": "Enable/Disable CSS Transitions",
                    "type": "boolean"
                },
                "vertical": {
                    "default": false,
                    "description": "Vertical slide mode",
                    "type": "boolean"
                }
            },
            "propertyOrder": [
                "accessibility",
                "adaptiveHeight",
                "arrows",
                "autoplay",
                "autoplaySpeed",
                "centerMode",
                "className",
                "dots",
                "dotsClass",
                "draggable",
                "fade",
                "focusOnSelect",
                "infinite",
                "initialSlide",
                "lazyLoad",
                "pauseOnHover",
                "responsive",
                "rtl",
                "slidesToShow",
                "useCSS",
                "vertical"
            ],
            "type": "object"
        }
    },
    "properties": {
        "id": {
            "description": "ID for issuing component events.",
            "type": "string"
        },
        "noResultTemplate": {
            "description": "Template which is applied when query returns no results",
            "type": "string"
        },
        "options": {
            "$ref": "#/definitions/ReactSlickOptions",
            "description": "Additional carousel config options propagated to underlying library [react-slick](https://github.com/akiran/react-slick)"
        },
        "query": {
            "description": "SPARQL SELECT query string",
            "type": "string"
        },
        "tupleTemplate": {
            "description": "[handlebars.js](http://handlebarsjs.com/) HTML slide template.\nSPARQL query projection variables are available in the template",
            "type": "string"
        }
    },
    "propertyOrder": [
        "query",
        "tupleTemplate",
        "noResultTemplate",
        "options",
        "id"
    ],
    "required": [
        "query",
        "tupleTemplate"
    ],
    "type": "object"
}

