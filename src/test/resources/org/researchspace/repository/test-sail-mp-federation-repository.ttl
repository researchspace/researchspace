@prefix config: <tag:rdf4j.org,2023:config/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ephedra: <http://www.researchspace.org/resource/system/ephedra#> .
@prefix fed: <http://www.researchspace.org/resource/system/repository/federation#> .

[] a config:Repository ;
	config:rep.id "test-sail-mp-federation-repository" ;
	rdfs:label "Test Federation Sail Description" ;
	rdfs:comment "Test Federation Sail Description with the main repository 'default' and the 'assets' and 'wikidata-text' repositories accessible as a service" ;
	config:rep.impl [
		config:rep.type "openrdf:SailRepository" ;
		config:sail.impl [
			config:sail.type "researchspace:Federation";
			ephedra:defaultMember "default" ;
			config:fed.member [
				ephedra:delegateRepositoryID "default" ;
				ephedra:serviceReference fed:default
			] ;
			config:fed.member [
				ephedra:delegateRepositoryID "wikidata-text" ;
				ephedra:serviceReference fed:wikidata-text
			] ;
			config:fed.member [
				ephedra:delegateRepositoryID "assets" ;
				ephedra:serviceReference fed:assets
			] .
		];
	].
