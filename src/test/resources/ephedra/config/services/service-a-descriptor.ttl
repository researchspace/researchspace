@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ephedra: <http://www.researchspace.org/resource/system/ephedra#> .
@prefix ex: <http://example.org/ns#> .
@prefix sp: <http://spinrdf.org/sp#> .
@prefix spin: <http://spinrdf.org/spin#> .
@prefix spl: <http://spinrdf.org/spl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

ex:ServiceA a ephedra:Service ;
   rdfs:label "Service A Descriptor" ;
   ephedra:serviceURL "http://localhost:18089/rdf4j-server/repositories/service-a" ;
   ephedra:httpMethod "GET" ;
   
   spin:constraint [
      a spl:Argument ;
      spl:predicate ex:_id ;
      spl:valueType xsd:string 
   ] ;
   
   spin:column [
      a spin:Column ;
      spl:predicate ex:_name ;
      spl:valueType xsd:string ;
      ephedra:jsonPath "$.name" 
   ] ;
   
   ephedra:hasSPARQLPattern (
      [
         sp:subject ex:_results ;
         sp:predicate ex:hasId ;
         sp:object ex:_id
      ]
      [
         sp:subject ex:_results ;
         sp:predicate ex:hasName ;
         sp:object ex:_name
      ]
   ) .
